<table border="1">
  <tr>
    <th>state</th>
    <th>principal_amount</th>
    <th>interest_rate</th>
    <th>action</th>
    <% if current_user.admin? %>
      <th>Client Email</th>
    <% end %>
  </tr>
  <% loans.each do |loan| %>
    <tr>
      <td><%= loan.state %></td>
      <td><%= loan.principal_amount %></td>
      <td><%= loan.interest_rate %></td>
      <td>
        <% if current_user.admin? %>
          <%= link_to "Show", edit_admin_loan_path(loan) %>
        <% else %>
          <%= link_to "Show", edit_client_loan_path(loan) %>
        <% end %>
      </td>
      <% if current_user.admin? %>
        <td>
          <%= loan.user.email %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
