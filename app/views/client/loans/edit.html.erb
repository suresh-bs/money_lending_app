<%= form_for @loan, url: client_loan_path(@loan) do |form| %>
  <%= @loan.state %><br %>
  <%= form.text_field :principal_amount %><br %>
  <%= form.text_field :interest_rate %><br %>
  <%= form.submit "Change and Request" %>
<% end %>
<%= link_to "Confirm", confirm_client_loan_path(@loan), data: { turbo_method: :patch } %>
<%= link_to "Reject", reject_client_loan_path(@loan), data: { turbo_method: :patch } %>
